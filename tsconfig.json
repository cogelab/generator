{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "lib": [
      "esnext"
    ],
    "target": "es6"
  },
  "include": [
    "index.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "src/**/*.test.ts"
  ]
}
